{
  "name": "salesforce-developer-portfolio",
  "version": "1.0.0",
  "description": "Salesforce Developer Portfolio Website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test/portfolio.test.js",
    "test:watch": "nodemon --exec 'npm test'",
    "test:jest": "jest test/jest.test.js --verbose",
    "test:all": "npm run test && npm run test:jest",
    "test:coverage": "jest test/jest.test.js --coverage",
    "test:md": "jest test/jest.test.js --testNamePattern='CRITICAL' --verbose",
    "build": "bash scripts/build.sh",
    "prebuild": "echo 'ðŸ” Pre-build checks...'",
    "postbuild": "echo 'âœ… Build complete!'",
    "predeploy": "npm run build && npm run test:all",
    "deploy": "bash scripts/deploy.sh",
    "deploy:heroku": "git push heroku main",
    "deploy:force": "git push heroku main --force",
    "commit": "git add . && git commit",
    "commit:docs": "git add docs/ && git commit -m 'Update documentation'",
    "commit:all": "git add -A && git commit",
    "push": "git push origin main",
    "push:heroku": "git push heroku main",
    "logs": "heroku logs --tail -a manas-behera-dev",
    "logs:error": "heroku logs --tail -a manas-behera-dev | grep -i error",
    "open": "heroku open -a manas-behera-dev",
    "status": "heroku ps -a manas-behera-dev",
    "restart": "heroku restart -a manas-behera-dev",
    "validate": "node -c server.js && echo 'âœ… Server syntax valid'",
    "check:docs": "find docs -name '*.md' | wc -l",
    "lint": "echo 'ðŸ” Linting... (add linter when ready)'",
    "precommit": "npm run validate",
    "prepare": "[ -d .git/hooks ] && cp scripts/hooks/* .git/hooks/ 2>/dev/null || true"
  },
  "keywords": [
    "salesforce",
    "developer",
    "portfolio",
    "heroku"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  },
  "dependencies": {
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}

