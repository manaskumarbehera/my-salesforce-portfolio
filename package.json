{
  "name": "salesforce-developer-portfolio",
  "version": "1.0.0",
  "description": "Salesforce Developer Portfolio Website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "jest --verbose --coverage",
    "test:md": "jest --testNamePattern='File Organization' --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "echo 'ðŸ” Linting code...' && node -c server.js",
    "lint:fix": "echo 'âœ… Lint check passed'",
    "format": "echo 'âœ¨ Formatting code...'",
    "validate": "node -c server.js && echo 'âœ… Server syntax valid'",
    "prebuild": "npm run validate && npm run test",
    "build": "bash scripts/build.sh",
    "postbuild": "echo 'âœ… Build complete!'",
    "precommit": "npm run validate && npm run test",
    "commit": "git add . && git commit",
    "commit:all": "git add -A && git commit",
    "commit:quick": "git add -A && git commit -m",
    "commit:auto": "npm run validate && git add -A && git commit",
    "commit:push": "npm run validate && git add -A && git commit && git push origin main",
    "commit:docs": "git add docs/ && git commit -m 'Update documentation'",
    "commit:msg": "git add . && git commit -m",
    "push": "git push origin main",
    "push:heroku": "git push heroku main",
    "predeploy": "npm run build",
    "deploy": "bash scripts/deploy.sh",
    "deploy:heroku": "git push heroku main",
    "deploy:force": "git push heroku main --force",
    "release": "npm run precommit && npm run commit && npm run push && npm run deploy:heroku",
    "logs": "heroku logs --tail -a manas-behera-dev",
    "logs:error": "heroku logs --tail -a manas-behera-dev | grep -i error",
    "open": "heroku open -a manas-behera-dev",
    "status": "heroku ps -a manas-behera-dev",
    "restart": "heroku restart -a manas-behera-dev",
    "check:docs": "find docs -name '*.md' | wc -l",
    "prepare": "[ -d .git/hooks ] && cp scripts/hooks/* .git/hooks/ 2>/dev/null || true"
  },
  "keywords": [
    "salesforce",
    "developer",
    "portfolio",
    "heroku"
  ],
  "author": "Manas Kumar Behera <behera.manas98@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  },
  "dependencies": {
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0"
  }
}

